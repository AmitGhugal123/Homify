<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3 class="my-4 text-center">Create a New Listing</h3>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" id="title" type="text" placeholder="Enter title" class="form-control" required />
        <div class="valid-feedback">Title looks good!</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" id="description" placeholder="Enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">please enter a valid Description!</div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">upload listing image</label>
        <input name="image" id="image" type="file" class="form-control" />
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" id="price" type="number" placeholder="Enter price" class="form-control" required />
        <div class="invalid-feedback">please enter a valid Price!</div>
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" id="country" type="text" placeholder="Enter country" class="form-control" required />
        <div class="invalid-feedback">please enter a valid Country!</div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" id="location" type="text" placeholder="Enter location" class="form-control" required />
        <div class="invalid-feedback">please enter a valid Location!</div>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Add Listing</button>
      </div>
    </form>

    <p class="mt-3 text-center">
      <a href="/listings">‚Üê Back to all listings</a>
    </p>
  </div>
</div>
