<% layout("layouts/boilerplate") %>

<div class="container my-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h3 class="card-title mb-3">
        <%= listing.title %>
      </h3>
      <dl class="row mb-4">

        <!-- Listing Image -->
        <img
          src="<%= listing.image && listing.image.url ? listing.image.url : 'https://via.placeholder.com/300x200?text=No+Image' %>"
          class="card-img-top mb-3"
          alt="Image of <%= listing.title %>"
          loading="lazy"
          onerror="this.onerror=null; this.src='https://via.placeholder.com/300x200?text=Broken+Image';"
          style="height:20rem; object-fit:cover;" />

        <!-- Owner -->
        <dt class="col-sm-3">Owner Name:</dt>
        <dd class="col-sm-9"><%= listing.owner.username %></dd>

        <!-- Description -->
        <dt class="col-sm-3">Description:</dt>
        <dd class="col-sm-9"><%= listing.description %></dd>

        <!-- Price -->
        <dt class="col-sm-3">Price:</dt>
        <dd class="col-sm-9">₹ <%= listing.price.toLocaleString("en-IN") %></dd>

        <!-- Location -->
        <dt class="col-sm-3">Location:</dt>
        <dd class="col-sm-9"><%= listing.location %></dd>

        <!-- Country -->
        <dt class="col-sm-3">Country:</dt>
        <dd class="col-sm-9"><%= listing.country %></dd>
      </dl>

      <!-- Buttons -->
      <div class="d-flex flex-wrap gap-2">
        <a href="/listings" class="btn btn-outline-secondary">← Back to all listings</a>

        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit this Listing</a>

          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="m-0">
            <button type="submit" class="btn btn-danger"
              onclick="return confirm('Are you sure you want to delete this listing?')">
              Delete this Listing
            </button>
          </form>
        <% } %>
      </div>
    </div>

    <!-- Review Section -->
    <div class="p-4 border-top">
      <hr />

      <!-- Only logged in users can add review -->
      <% if(currUser) { %>
        <h4 class="mb-3">Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

          <!-- Star Rating -->
          <div class="mb-3">
            <label class="form-label">Rating</label>
            <fieldset class="starability-heartbeat">
              <input type="radio" id="rate1" name="review[rating]" value="1" required />
              <label for="rate1" title="Terrible">1 star</label>

              <input type="radio" id="rate2" name="review[rating]" value="2" />
              <label for="rate2" title="Not good">2 stars</label>

              <input type="radio" id="rate3" name="review[rating]" value="3" />
              <label for="rate3" title="Average">3 stars</label>

              <input type="radio" id="rate4" name="review[rating]" value="4" />
              <label for="rate4" title="Very good">4 stars</label>

              <input type="radio" id="rate5" name="review[rating]" value="5" />
              <label for="rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <!-- Comment -->
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" rows="4" class="form-control"
              placeholder="Write your review..." required></textarea>
            <div class="invalid-feedback">Please add some comments for review</div>
          </div>

          <!-- Submit -->
          <button type="submit" class="btn btn-success">Submit Review</button>
        </form>
        <hr />
      <% } %>

      <!-- All Reviews -->
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p class="card-text"><%= review.comment %></p>

              <!-- Star Display -->
              <p>
                <% for (let i = 1; i <= 5; i++) { %>
                  <%= i <= review.rating ? "⭐" : "☆" %>
                <% } %>
              </p>

              <!-- Only review author can delete -->
              <% if(currUser && currUser._id.equals(review.author._id)) { %>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
